@model Project_ProductMaster.Models.Category
@{
    ViewBag.Title = "Category";
}

<h2>Category</h2>

<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
          
            <label>CategoryId</label>
            @Html.TextBoxFor(a => a.CategoryId, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>CategoryName</label>

            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "error" })
            @Html.TextBoxFor(a => a.CategoryName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>

            <button type="reset" class="btn btn-primary">Reset</button>

        </div>
    </div>
}